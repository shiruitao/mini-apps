<style>
.viewAll {
  display: flex;
  flex-direction: column;
  background-color:#f5f6f8;
}

.viewInformation {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50%;
}

.viewHead {
  height: 4.8rem;
  width: 4.8rem;
  box-shadow: 0px 0px 25px 0px rgba(256, 56, 56, 0.5);
  margin-bottom: 0.5rem;
  border-radius: 50%;
}

.textName {
  font-size: 15px;
}
.arrow {
  justify-content: flex-end;
  height: 17px;
  width: 17px;
  
}
.viewList {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.viewListIn {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 15%;
  width: 100%;
  border-bottom: 1px solid #f7f6f6;
  background-color: white;
}

.listPhoto {
  padding-left: 0.5rem;
  padding-right: 0.7rem;
  height: 15px;
  width: 15px;
}
.view-arrow {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  width: 100%;
}
</style>
<template>
  <view style="height: {{height}}px; width: {{width}}px;" class="viewAll">
    <view class="viewInformation">
      <image class="viewHead" src="{{head}}" />
      <text class="textName">{{name}}</text>
    </view>
    <view class="viewList">
      <view class="viewListIn" @tap="pageOrder">
        <view class="view-arrow">
          <image class="listPhoto" src="{{order}}" />
          <text class="textName">我的订单</text>
        </view>
        <view class="view-arrow" style="justify-content: flex-end; padding-right: 10px">
          <image class="arrow" src="{{arrow}}" />
        </view>
      </view>
      <view class="viewListIn" @tap="pageAddress">
        <view class="view-arrow">
          <image class="listPhoto" src="{{address}}" />
          <text class="textName">收货地址</text>
        </view>
        <view class="view-arrow" style="justify-content: flex-end; padding-right: 10px">
          <image class="arrow" src="{{arrow}}" />
        </view>
      </view>
      <view class="viewListIn" @tap="pageContact" style="margin-top: 30rpx">
        <view class="view-arrow">
          <image class="listPhoto" src="{{phone}}" />
          <text class="textName">联系我们</text>
        </view>
        <view class="view-arrow" style="justify-content: flex-end; padding-right: 10px">
          <image class="arrow" src="{{arrow}}" />
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
export default class my extends wepy.page {
  config = {
    navigationBarTitleText: '个人中心'
  }
  data = {
    height: 0,
    width: 0,
    head: '../my/head.png',
    name: '这里是昵称🇨🇳',
    order: '../my/order.png',
    address: '../my/address.png',
    shop: '../images/shop.png',
    phone: '../my/phone.png',
    arrow: '../my/arrow.png'
  }
  methods = {
    pageOrder() {
      wepy.navigateTo({
        url: './class/order'
      })
    },
    pageAddress() {
      wepy.chooseAddress({
        success: function (res) {
          console.log(JSON.stringify(res))
        },
        fail: function (err) {
          console.log(JSON.stringify(err))
        }
      })
      // wepy.navigateTo({
      //   url: './my/address'
      // })
    },
    pageContact() {
      wepy.setClipboardData({
        data: '18331290663',
        success: function(res) {
          wepy.showActionSheet({
            itemList: ['18331290663'],
            success: function(res) {
              if (res.tapIndex === 0) {
                wepy.showToast({
                  title: '已复制',
                  icon: 'success',
                  duration: 1000
                })
              }
            }
          })
        }
      })
      // wepy.showModal({
      //   title: '手机:',
      //   content: '18331290663'
      // })
    }
  }
  onLoad() {
    let self = this
    wepy.getUserInfo({
      success: function(res) {
        self.name = res.userInfo.nickName
        self.head = res.userInfo.avatarUrl
      }
    })
    wepy.getSystemInfo({
      success(res) {
        self.height = res.windowHeight
        self.width = res.windowWidth
      }
    })
  }
  onShow() {}
}
</script>
