
  <view class="overall" style="width: {{Width}}px">
    <view class="view-top">
      <scroll-view scroll-x="true" style="white-space: nowrap; display: block" class="view-class">
        <text class="text-class" style="color: {{colorA}};border-bottom: 3px solid {{colora}}" bindtap="classA">特价</text>
        <text class="text-class" style="color: {{colorB}};border-bottom: 3px solid {{colorb}}" bindtap="classB">调味品</text>
        <text class="text-class" style="color: {{colorC}};border-bottom: 3px solid {{colorc}}" bindtap="classC">米面</text>
        <text class="text-class" style="color: {{colorD}};border-bottom: 3px solid {{colord}}" bindtap="classD">豆类</text>
        <text class="text-class" style="color: {{colorE}};border-bottom: 3px solid {{colore}}" bindtap="classE">酱乳类</text>
        <text class="text-class" style="color: {{colorF}};border-bottom: 3px solid {{colorf}}" bindtap="classF">火锅食材</text>
        <text class="text-class" style="color: {{colorG}};border-bottom: 3px solid {{colorg}}" bindtap="classG">餐具用品</text>
      </scroll-view>
      <view class="view-search" bindtap="search">
        <image class="searchButtonPho" src="{{'../image/search.png'}}"/>
      </view>
    </view>
  
    <view class="view-swiper">
      <swiper class="photo-swiper" indicator-dots="{{indicatorDots}}" circular="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{indicatorActiveColor}}">
        <block  wx:for="{{imgUrls}}" wx:key="index">
          <swiper-item>
            <image src="{{item}}" class="photo-swiper"/>
          </swiper-item>
        </block>
      </swiper>
    </view>

