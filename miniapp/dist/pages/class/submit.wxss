
.view-top {
  width: 100%;
  display: flex;
  /* justify-content: ; */
  align-items: center;
  border-top: 1px solid #cceff5;
  border-bottom: 10px solid #f5f6f8;
  background:#fafcfd
}
.view-addr {
  display: flex;
  width: 93%;
  align-items: center;
}
.image-icon-addr {
  margin-left: 30rpx;
  height: 40rpx;
  width: 40rpx;
}
.view-address {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 30rpx;
  font-size: 11px;
  width: 80%;
}
.image-icon-arrow {
  position: absolute;
  right: 30rpx;
  height: 15px;
  width: 15px;
}
.view-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 50px;
  border-top: 2px solid #f5f6f8;
}
.text-total {
  font-size: 15px;
}
.view-pay {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 0;
  border-top: 1px solid tomato;
  background-color: tomato;
  color: white;
  height: 50px;
  font-size: 15px;
  width: 30%;
}

.text-addr {
  font-size: 11px;
}
.view-addr-text {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 75%;
  margin: 30rpx 0 30rpx 30rpx;
}
.view-addr-top {
  display: flex;
  align-items: center;
}
.view-addr-bottom {
  display: flex;
  align-items: center;
}
.view-commodity-list {
  display: flex;
  align-items: center;
  width: 100%;
  height: 250rpx;
  border-bottom: 3px solid #f5f6f8;
}
.image-photo {
  height: 185rpx;
  width: 185rpx;
  margin: 30rpx;
}
.view-information {
  height: 190rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0 30rpx 0;
}
.view-title {
  height: 100%;
  width: 330rpx;
  overflow: scroll;
}
.view-price {
  height: 100%;
  width: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text-title {
  font-size: 15px;
}
.text-price {
  font-size: 13px;
  text-align: center;
}
