
.view-main {
  display: flex;
  flex-direction: column;
  background-color: #f5f6f8;
}
.view-poster {
  height: 450rpx;
  width: 100%;
}
.image-poster {
  height: 100%;
  width: 100%;
}
.view-allText {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}
.view-title {
  width: 93%;
  margin-top: 4px;
  align-items: center;
  background-color: white;
}
.text-title {
  font-size: 13px;
}
.view-price {
  width: 93%;
  background-color: white;
}
.text-price {
  font-size: 15px;
  color: tomato;
}
.view-bottom {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  border-top: 0.5px solid lightgrey;
}
.view-introduce {
  width: 100%;
}
.view-bottom-all {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.text-bottom {
  font-size: 11px;
}
.icon {
  height: 18px;
  width: 18px;
  padding-right: 10rpx;
}
.view-detail {
  width: 100%;
  position: relative;
  top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.text-detail-title {
  font-size: 15px;
  border-left: 4px solid black;
  padding-left: 3px;
  margin-top: 3px;
}
.text-detail {
  font-size: 11px;
  margin: 10rpx 20rpx 20rpx 20rpx;
  color: #333333;
}
.view-detail-photo {
  position: relative;
  top: 20rpx;
  height: 450rpx;
  width: 100%;
}
.image-detail {
  height: 100%;
  width: 100%;
}
