
.view-main {
  display: flex;
  flex-direction: column;
  background-color: #f5f6f8;
}
.view-poster {
  height: 450rpx;
  width: 100%;
}
.image-poster {
  height: 100%;
  width: 100%;
}
.view-allText {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}
.view-title {
  width: 93%;
  display: flex;
  align-items: center;
  background-color: white;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
}
.text-title {
  font-size: 15px;
}
.view-price {
  width: 93%;
  display: flex;
  background-color: white;
}
.text-price {
  font-size: 15px;
  color: tomato;
}
.view-bottom {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  border-top: 0.5px solid lightgrey;
}
.view-introduce {
  width: 100%;
}
.view-bottom-all {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.text-bottom {
  font-size: 11px;
}
.icon {
  height: 18px;
  width: 18px;
  padding-right: 10rpx;
}
