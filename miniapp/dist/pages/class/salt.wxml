
  <view class="view">
    <view class="viewCom">
      <block  wx:for="{{commodity}}" wx:key="index">
        <view class="viewCom">
          <image class="viewphoto" src="{{item.image}}"/>
          <text class="comText">{{item.title}}</text>
          <view class="moneyBtn">
            <view class="viewMoney">
              <text class="moneyText">¥ {{item.price}}</text>
            </view>
            <view class="viewButton">
              <button class="buyButton" formType="submit" data-index="{{index}}" bindtap="goods">加入购物车</button>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>