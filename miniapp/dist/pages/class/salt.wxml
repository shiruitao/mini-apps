
  <view class="view">
    <view class="viewCom">
      <block  wx:for="{{commodity}}" wx:key="index">
        <view class="viewCom">
          <image class="viewphoto" src="{{item.comPhoto}}"/>
          <text class="comText">{{item.comText}}</text>
          <view class="moneyBtn">
            <view class="viewMoney">
              <text class="moneyText">¥ {{item.money}}</text>
            </view>
            <view class="viewOperation">
              <button class="buttonOperation" bindtap="sub">-</button>
              <view class="viewNum">
                <text class="number">{{number}}</text>
              </view>
              <button class="buttonOperation" bindtap="add">+</button>
            </view>
            <view class="viewButton">
              <button class="buyButton" formType="submit" bindtap="wait">加入购物车</button>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>